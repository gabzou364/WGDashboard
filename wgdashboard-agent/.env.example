# Environment configuration for WGDashboard Agent
# Copy this file to /opt/wgdashboard-agent/.env and customize

# Required: Shared secret for HMAC authentication
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
WG_AGENT_SECRET=change-me-in-production

# Agent listen address and port
WG_AGENT_HOST=0.0.0.0
WG_AGENT_PORT=8080

# Logging level (DEBUG, INFO, WARNING, ERROR)
WG_AGENT_LOG_LEVEL=INFO

# Maximum age of request timestamps in seconds (replay attack prevention)
MAX_TIMESTAMP_AGE=300
